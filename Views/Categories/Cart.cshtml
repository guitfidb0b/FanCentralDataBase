@model FanCentral2.Models.ViewModels.BrowseProductCategories

<h2>Your cart</h2>

<table>
    <thead>
        <tr>
            <th>Quantity</th>
            <th>Price</th>
            <th>Description</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <td>@line.Quantity</td>
                <td>@line.Product.Price.ToString("c")</td>
                <td>@line.Product.Description</td>
                <td>@((line.Quantity * line.Product.Price).ToString("c"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td>Total:</td>
            <td>@Model.Cart.ComputeTotalValue().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div>
    <a href="@Model.ReturnUrl">Continue shopping</a>
</div>