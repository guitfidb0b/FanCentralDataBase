@model GuestOrder

<h2>Check out now</h2>
<p>Please enter your details, and we'll ship your goods right away! This is Checkout from Order/</p>

<form asp-action="Checkout" method="post">
    <h3>Ship to</h3>
    <div>
        <label>Name:</label><input asp-for="Name" />
    </div>
    <h3>Address</h3>
    <div>
        <label>Line 1:</label><input asp-for="Line1" />
    </div>
    <div>
        <label>Line 2:</label><input asp-for="Line2" />
    </div>
    <div>
        <label>Line 3:</label><input asp-for="Line3" />
    </div>
    <div>
        <label>City:</label><input asp-for="City" />
    </div>
    <div>
        <label>State:</label><input asp-for="State" />
    </div>
    <div>
        <label>Zip:</label><input asp-for="Zip" />
    </div>
    <div>
        <label>Country:</label><input asp-for="Country" />
    </div>
    <h3>Options</h3>
    <div>
        <label>
            <input asp-for="GiftWrap" /> Gift wrap these items
        </label>
    </div>
    <div>
        <input type="submit" value="Complete Order" />
    </div>
</form>