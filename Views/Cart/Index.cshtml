@model FanCentral2.Models.ViewModels.CartIndexViewModel

<h2>Your cart</h2>

@if(@Model.Cart.Lines.Count() != 0)
{
    <table>
    <thead>
        <tr>
            <th>Quantity</th>
            <th>Price</th>
            <th>Description</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <td>@line.Quantity</td>
                <td>@line.Product.Price.ToString("c")</td>
                <td>@line.Product.Description</td>
                <td>@((line.Quantity * line.Product.Price).ToString("c"))</td>
                <form asp-action="RemoveFromCart" method="post">
                    <input type="hidden" name="productId" value="@line.Product.ProductID" />
                    <button type="submit">
                        Remove
                    </button>
                </form>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td>Total:</td>
            <td>@Model.Cart.ComputeTotalValue().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div>
    <a asp-action="Checkout" asp-controller="Order">
        Checkout
    </a>
    <a asp-controller="Categories" asp-action="Index" asp-route-id="22">Continue Shopping</a>
</div>
}
else
{
    <h1>Your Cart is Empty</h1>
    <a asp-controller="Categories" asp-action="Index" asp-route-id="22">Continue Shopping</a>
}